<!doctype html>
<html lang="fr" data-bs-theme="auto">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CARS SHOP</title>
    <meta name="description" content="Vente de voiture">
    <link href="{{ asset('assets/css/custom.css') }}" rel="stylesheet">

    <link href="{{ asset('assets/css/styles.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">


    <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="{{ asset('assets/css/carousel.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/custom.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css">

    <script src="https://unpkg.com/feather-icons"></script>
</head>
<body>

<header data-bs-theme="dark">
    <nav class="navbar navbar-expand-md fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_home') }}">CARS-SHOP</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                   <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('app_home') }}" id="home-color-m">Accueil</a>
                   </li>
                   {% for category in allCategories %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_category', { slug : category.slug } ) }}">{{ category.name }}</a>
                        </li>

                   {% endfor %}
                </ul>

                <div class="speed-menu">

                    {% if app.user %}
                        <a href="{{ path('app_account') }}"><i data-feather="user"></i> {{ app.user.firstname }} </a> 
                            <a href="{{ path('app_account_wishlist') }}">
                                <i data-feather="heart"></i>
                            </a>
                    {% else %}
                        <a href="{{ path('app_login') }}"><i data-feather="user"></i></a> 
                    {% endif %}

                    <a href="{{ path('app_cart') }}">
                        <i data-feather="shopping-cart"></i>
                        <span class="badge text-bg-light">{{ fullCartQuantity }} </span>
                    </a>
                </div>
            </div>
        </div>
    </nav>
</header>

<main>
 <br/> <br/> <br/> <br/> <br/> <br/>
    <div class="container my-5" id="bgg_grey">
        <h1 id="mrtop">Connexion</h1>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('app_login') }}" method="post" id="form_login_color">
                <label for="username">Votre Email</label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required>

                <label for="password mt-3" class="mtt_new" id="password">Votre mot de passe</label>
                <input class="form-control mb_new" type="password" name="_password" required>

                <input type="hidden" name="_target_path" value="{{ path('app_account') }}">

                <button type="submit" class="btn btn-success mt-3">Me connecter</button>
            </form>

            <br/>
            <p id="vousavezuncompte">Vous n'avez pas de compte ?</p> <a class="font_litle" href="{{ path('app_register') }}">Incrivez-vous</a><br/>
            <a class="font_litle" href="{{ path('app_password') }}">Mot de passe oubli√©</a>

    </div>
    
    
</main>

<script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"></script>
<script src="{{ asset('assets/js/global.js') }}"></script>
</body>
</html>